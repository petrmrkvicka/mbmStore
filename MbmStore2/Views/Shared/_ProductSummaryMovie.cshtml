@model MbmStore2.Models.Movie
@using MbmStore2.Models

<div class="row">
    <div class="col-md-2">
        <img src="/Images/@Model.ImageUrl" alt="@Model.Title" style="width:100px" />
    </div>
    <div class="col-md-4">
        <strong>Title:</strong> @Model.Title<br />
        <strong>Price:</strong> @String.Format("{0:0.00}", Model.Price)<br />
        <strong>Director:</strong> @Model.Director<br />
</div>
    @await Html.PartialAsync("_AddToCartButton", (Product) Model)
</div>